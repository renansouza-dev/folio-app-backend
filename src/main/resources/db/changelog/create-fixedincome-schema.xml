<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet author="renan" id="1-1">
        <createTable tableName="fixed_incomes">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="brokerage" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="emitter" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="forma" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="due_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="REAL">
                <constraints nullable="false"/>
            </column>
            <column name="withdraw_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>